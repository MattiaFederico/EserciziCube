<mvc:View xmlns:core="sap.ui.core" 
  controllerName="App.controller.App" 
  xmlns:mvc="sap.ui.core.mvc" 
  xmlns="sap.m" 
  displayBlock="true" 
  height="100%" 
  busyIndicatorDelay="0"
>
  <Page title="{i18n>mainTitle}">
    <content>
      <FlexBox alignContent="Center" alignItems="Center" justifyContent="Center">
        <GenericTile class="sapUiSmallMargin" imageDescription="sap-icon://product" header="Lista Prodotti" press="onNavTo('anagrafica')">
          <TileContent >
            <core:Icon src="sap-icon://product" height="100%" width="100%" size="75px"/>
          </TileContent>
        </GenericTile>
        <GenericTile class="sapUiSmallMargin" header="Fornitori" press="onNavTo('fornitori')">
          <TileContent >
            <core:Icon src="sap-icon://supplier" height="100%" width="100%" size="75px" />
          </TileContent>
        </GenericTile>
      </FlexBox>
    </content>
  </Page>
</mvc:View>