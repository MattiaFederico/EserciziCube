<mvc:View xmlns:form="sap.ui.layout.form" 
  controllerName="App.controller.Suppliers" 
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns="sap.m" 
  displayBlock="true" 
  height="100%" 
  busyIndicatorDelay="0"
>
  <Page title="{i18n>suppliers.title}" showNavButton="true" navButtonPress="onNavBack">
    <content>
      <FlexBox justifyContent="Center" alignItems="Center" direction="Column">
        <Panel backgroundDesign="Transparent">
          <Label text="{i18n>suppliersID}" />
          <Input id="suppliersInput" class="sapUiSmallMarginTop" type="Number" liveChange="liveChange" submit="onSubmit" placeholder="{i18n>suppliersInput.placeholder}" showValueHelp="true" valueHelpRequest="onDialogOpen"/>
        </Panel>
      </FlexBox>
    </content>
  </Page>
</mvc:View>