<mvc:View xmlns:form="sap.ui.layout.form" 
  controllerName="App.controller.Suppliers" 
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns="sap.m" 
  displayBlock="true" 
  height="100%" 
  busyIndicatorDelay="0"
>
  <Page title="{i18n>suppliersTitle}" showNavButton="true" navButtonPress="onNavBack">
    <content>
      <FlexBox justifyContent="Center" alignItems="Center" direction="Row">
        <Panel backgroundDesign="Transparent">
          <Label text="ID Fornitore" />
          <Input class="sapUiSmallMarginTop" type="Number" liveChange="liveChange" submit="onSubmit" placeholder="Inserire un Fornitore..." showValueHelp="true" valueHelpRequest="onDialogOpen"/>
        </Panel>
      </FlexBox>
    </content>
  </Page>
</mvc:View>