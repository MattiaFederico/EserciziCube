<mvc:View xmlns:vk="sap.ui.vk" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" controllerName="App.controller.SuppliersDashboard">
  <Page title="{i18n>suppliersDashboard.title}" showNavButton="true" navButtonPress="onNavBack">
    <content>
      <FlexBox justifyContent="Center" alignItems="Center" direction="Column">
        <Panel >
          <Button press="showMore('contact')" class="sapUiTinyMarginBeginEnd" icon="sap-icon://hint"/>
          <Button press="showMore('address')" class="sapUiTinyMarginBeginEnd" icon="sap-icon://inspection"/>
          <List id="details">
            <items>
              <StandardListItem id="companyName" visible="false" title="{Suppliers>CompanyName}" />
              <StandardListItem id="contactName" visible="false" title="{Suppliers>ContactName}" />
              <StandardListItem id="contactTitle" visible="false" title="{Suppliers>ContactTitle}" />
              <StandardListItem id="address" visible="false" title="{Suppliers>Address}" />
              <StandardListItem id="city" visible="false" title="{Suppliers>City}" />
              <StandardListItem id="region" visible="false" title="{Suppliers>Region}" />
              <StandardListItem id="postalcode" visible="false" title="{Suppliers>PostalCode}" />
              <StandardListItem id="country" visible="false" title="{Suppliers>Country}" />
            </items>
          </List>
        </Panel>
      </FlexBox>
    </content>
  </Page>
</mvc:View>